<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Create new Employee</title>
  <meta name="description" content="Create new Employee">
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
</head>

<body>

  <div class="container">
  			<div class="box-header">

<h1> Create new Employee </h1>

<%= form_for(@employee) do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label :alias %>
<%= f.text_field :alias %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :office %>
<%= f.text_field :office %>

<%= f.label 'Select a Dog' %>
<%= f.collection_select :dog_id, Dog.all, :id, :name %>

<%= f.submit %>
<% end %>

</div>
</div>
</body>
